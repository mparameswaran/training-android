            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.madan.training.TrainingMainActivity"
            android:label="@string/app_name" >

        </activity>
        <activity
            android:name="com.madan.training.SignInActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.madan.training.TrainingDetail"
            android:label="@string/title_activity_training_detail" >
        </activity>
    </application>

</manifest>
