<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <ImageView
        android:id="@+id/search_list_image"
        android:layout_width="@dimen/search_image_width"
        android:layout_height="@dimen/search_image_height"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/margin_20dp"
        android:padding="@dimen/banner_padding"
        android:scaleType="fitXY"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/search_list_image"
        android:id="@+id/search_item_name"
        android:layout_marginTop="@dimen/margin_20dp"
        android:layout_marginLeft="@dimen/training_padding"
        android:textSize="@dimen/margin_20dp"
        android:textStyle="bold"/>
    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressDrawable="@drawable/rating_star_gold"
        style="@style/CustomRatingBar"
        android:layout_marginLeft="@dimen/training_padding"
        android:layout_marginTop="@dimen/training_padding"
        android:layout_below="@+id/search_item_name"
        android:layout_toRightOf="@+id/search_list_image"
        android:id="@+id/search_item_rating"/>

    
</RelativeLayout>